<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugType>none</DebugType>
    <Authors>Carsten Schäfer</Authors>
    <Description>PowerShell cmdlets to access portable devices</Description>
    <Copyright>Copyright (c) 2022 by Carsten Schäfer</Copyright>
    <PackageTags>OpilioCraft;WPD</PackageTags>
    <RunAnalyzersDuringBuild>True</RunAnalyzersDuringBuild>
    <RunAnalyzersDuringLiveAnalysis>True</RunAnalyzersDuringLiveAnalysis>
    <EnableNETAnalyzers>True</EnableNETAnalyzers>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PowerShellStandard.Library" Version="5.1.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\OpilioCraft.PortableDevices.Core\OpilioCraft.PortableDevices.Core.csproj" />
  </ItemGroup>

</Project>
